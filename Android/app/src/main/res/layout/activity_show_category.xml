<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="vendoee.vvpvtltd.vendoee.ShowCategory">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#3F51B5"
        android:elevation="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#3949AB"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/facing_problem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="25dp"
            android:text="Update Catgory? Call us"
            android:textColor="#ffffff"
            android:textSize="23dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/call"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/phone_white"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="90dp"
                android:id="@+id/rl"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:padding="7dp">



                    <CheckBox
                        android:id="@+id/electronics"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Electronics" />

                    <CheckBox
                        android:id="@+id/appliances"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Appliances" />

                    <CheckBox
                        android:id="@+id/men"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Men" />

                    <CheckBox
                        android:id="@+id/women"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Women" />

                    <CheckBox
                        android:id="@+id/kids"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kids &amp; Baby" />

                    <CheckBox
                        android:id="@+id/home"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home &amp; Furniture" />

                    <CheckBox
                        android:id="@+id/books"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Books &amp; more" />

                    <CheckBox
                        android:id="@+id/grocery"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grocery" />

                    <CheckBox
                        android:id="@+id/automobile"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gift Hampers" />

                    <CheckBox
                        android:id="@+id/food"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food &amp; Restaurants" />

                    <CheckBox
                        android:id="@+id/hand"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Handlooms" />

                    <CheckBox
                        android:id="@+id/other"
                        android:layout_width="wrap_content"
                        android:clickable="false"
                        android:layout_height="wrap_content"
                        android:text="Other" />

                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                android:layout_alignParentBottom="true"
                android:paddingBottom="10dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginBottom="6dp"
                    android:layout_height="wrap_content"
                    android:text="(Scroll up and down to view all categories)"
                    android:gravity="center"/>
                <!--

                 <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Update"
                    android:onClick="update"
                    android:layout_marginRight="2dp"
                    android:textColor="#ffffff"
                    android:background="#3F51B5"
                    />

                 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Refresh"
                        android:id="@+id/refreshcat"
                        android:layout_marginLeft="2dp"
                        android:textColor="#ffffff"
                        android:background="#3F51B5"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>

</LinearLayout>