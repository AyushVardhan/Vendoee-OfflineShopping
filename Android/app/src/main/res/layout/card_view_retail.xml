<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardUseCompatPadding="true"
        app:contentPaddingBottom="-3dp"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="200dp"
                    android:orientation="vertical"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    >
                    <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5px"
                            android:background="#c0c0c0"
                            android:layout_marginTop="8dp"/>

                        <ImageView

                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:src="@drawable/ic_directions_black_48px"
                            android:layout_gravity="center"
                            android:id="@+id/getDirection"

                            />
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5px"
                        android:background="#c0c0c0"/>

                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:src="@drawable/ic_call_black_48px"
                            android:layout_gravity="center"
                            android:id="@+id/callRetailer"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"


                            />
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5px"
                        android:background="#c0c0c0"

                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="230dp"
                    android:background="#FFFFFF"
                    android:scaleType="center"
                    android:id="@+id/item_image"
                    />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:orientation="horizontal"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="16dp"
                    >
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_store_black_48px"

                        />

                    <TextView
                        android:id="@+id/shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/thumbnail"
                        android:maxLines="3"
                        android:paddingTop="2dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"

                        android:textColor="#222"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:clickable="true"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginLeft="25dp">
                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:id="@+id/cashornocash"

                            android:contentDescription="Cashless or Cash"


                            />
                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:id="@+id/veriefied"

                            android:layout_marginLeft="10dp"

                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dist"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="50dp"
                    android:text="123"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sellid"
                    android:layout_marginTop="3dp"
                    android:visibility="invisible"
                    android:layout_marginLeft="50dp"
                    android:text="123"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5px"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="#c0c0c0"/>



        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
