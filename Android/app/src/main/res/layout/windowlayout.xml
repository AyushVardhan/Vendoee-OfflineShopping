<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="500dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content">


        <vendoee.vvpvtltd.vendoee.MyTextView
            android:id="@+id/tv_lat"
            android:text="Shop Name: "
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/shopname"
            android:text="Shop Name "
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_lat"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <vendoee.vvpvtltd.vendoee.MyTextView
            android:id="@+id/tv_lng"
            android:text="Contact: "
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/shopContact"
            android:text="Contact "
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/tv_lng"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/shopname"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <vendoee.vvpvtltd.vendoee.MyTextView
            android:id="@+id/tv_ltlng"
            android:text="Categories: "
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/shopContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/shopCategory"
            android:text="Categories "
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/tv_ltlng"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"
            android:layout_below="@+id/shopContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shopCategory"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/takeme"
            android:text="Go to shop"
            android:background="#f44336"
            android:textColor="@color/white"/>
    </RelativeLayout>

</LinearLayout>