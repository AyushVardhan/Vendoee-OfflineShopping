<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vendoee.vvpvtltd.vendoee.showCat">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="#3F51B5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="Select Categories"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:id="@+id/inext"
                android:paddingRight="10dp"
                android:layout_alignParentEnd="true"
                android:textSize="20dp"
                android:text="Next"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#f5f5f5">

        <TableLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/LL"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true">

            <TableRow
                android:layout_marginLeft="4dp">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/electronics"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardUseCompatPadding="true"
                    android:onClick="electronics">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:src="@drawable/gadgets"
                            android:id="@+id/electronicsimg"/>

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/electronicsimg"
                            android:text="Electronics"
                            android:textAlignment="center"
                            android:fontFamily=""
                            android:id="@+id/electronicstxt"/>

                        <ImageView
                            android:layout_width="50dp"
                            android:id="@+id/elecimg"
                            android:visibility="invisible"
                            android:layout_height="50dp"
                            android:src="@drawable/tick"
                            android:layout_below="@+id/electronicsimg"
                            android:layout_toRightOf="@+id/electronicstxt"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/appliance"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardUseCompatPadding="true"
                    android:onClick="appliance">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:src="@drawable/appliance"
                            android:id="@+id/applianceimg"/>

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/applianceimg"
                            android:id="@+id/appliancetxt"
                            android:text="Appliances"
                            android:textAlignment="center"
                            android:fontFamily=""/>

                        <ImageView
                            android:layout_width="50dp"
                            android:visibility="invisible"
                            android:id="@+id/appimg"
                            android:layout_height="50dp"
                            android:src="@drawable/tick"
                            android:layout_below="@+id/applianceimg"
                            android:layout_toRightOf="@+id/appliancetxt"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </TableRow>

            <TableRow
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/mens"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardUseCompatPadding="true"
                    android:onClick="mens">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:src="@drawable/mens"
                            android:id="@+id/mensimg"/>

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/mensimg"
                            android:id="@+id/menstxt"
                            android:text="Mens"
                            android:textAlignment="center"
                            android:fontFamily=""/>

                        <ImageView
                            android:layout_width="50dp"
                            android:visibility="invisible"
                            android:id="@+id/menimg"
                            android:layout_height="50dp"
                            android:src="@drawable/tick"
                            android:layout_below="@+id/mensimg"
                            android:layout_toRightOf="@+id/menstxt"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/womens"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardUseCompatPadding="true"
                    android:onClick="women">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="140dp"
                            android:paddingLeft="15dp"
                            android:src="@drawable/womens"
                            android:id="@+id/womensimg"/>

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/womensimg"
                            android:id="@+id/womenstxt"
                            android:text="Womens"
                            android:textAlignment="center"
                            android:fontFamily=""/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:visibility="invisible"
                            android:id="@+id/womenimg"
                            android:src="@drawable/tick"
                            android:layout_below="@+id/womensimg"
                            android:layout_toRightOf="@+id/womenstxt"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </TableRow>

            <TableRow
                android:layout_marginLeft="4dp">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/automob"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardUseCompatPadding="true"
                    android:onClick="parts">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:src="@drawable/gift"
                            android:id="@+id/automobimg"/>

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/automobimg"
                            android:text="Gift Hampers"
                            android:textAlignment="center"
                            android:id="@+id/automobtxt"
                            android:fontFamily=""/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/tick"
                            android:layout_below="@+id/automobimg"
                            android:visibility="invisible"
                            android:id="@+id/partimg"
                            android:layout_toRightOf="@+id/automobtxt"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/home"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardUseCompatPadding="true"
                    android:onClick="ghar">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:src="@drawable/furniture"
                            android:id="@+id/homeimg"/>

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/homeimg"
                            android:id="@+id/hometxt"
                            android:text="Home/Furniture"
                            android:textAlignment="center"
                            android:fontFamily=""/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/tick"
                            android:visibility="invisible"
                            android:id="@+id/gharimg"
                            android:layout_below="@+id/homeimg"
                            android:layout_toRightOf="@+id/hometxt"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </TableRow>

            <TableRow
                android:layout_marginLeft="4dp">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/book"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardUseCompatPadding="true"
                    android:onClick="buk">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:src="@drawable/books"
                            android:id="@+id/bookimg"/>

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/bookimg"
                            android:id="@+id/booktxt"
                            android:text="Books"
                            android:textAlignment="center"
                            android:fontFamily=""/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/tick"
                            android:visibility="invisible"
                            android:id="@+id/bukimg"
                            android:layout_below="@+id/bookimg"
                            android:layout_toRightOf="@+id/booktxt"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/grocery"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardUseCompatPadding="true"
                    android:onClick="kirana">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:src="@drawable/groceries"
                            android:id="@+id/groceryimg"/>

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/groceryimg"
                            android:id="@+id/grocerytxt"
                            android:text="Grocery"
                            android:textAlignment="center"
                            android:fontFamily=""/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/tick"
                            android:visibility="invisible"
                            android:id="@+id/grocer"
                            android:layout_below="@+id/groceryimg"
                            android:layout_toRightOf="@+id/grocerytxt"/>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </TableRow>

            <TableRow
                android:layout_marginLeft="4dp">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/handloom"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardUseCompatPadding="true"
                    android:onClick="handloom">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:src="@drawable/handloom"
                            android:id="@+id/handloomimg"/>

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/handloomimg"
                            android:text="Handlooms"
                            android:textAlignment="center"
                            android:fontFamily=""
                            android:id="@+id/txthandloom"/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/tick"
                            android:visibility="invisible"
                            android:id="@+id/handlum"
                            android:layout_below="@+id/handloomimg"
                            android:layout_toRightOf="@+id/txthandloom"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/foods"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardUseCompatPadding="true"
                    android:onClick="foodds">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:src="@drawable/foods"
                            android:id="@+id/foodsimg"/>

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/foodsimg"
                            android:text="Food/Resturants"
                            android:textAlignment="center"
                            android:fontFamily=""
                            android:id="@+id/txtfood"/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/tick"
                            android:visibility="invisible"
                            android:id="@+id/food"
                            android:layout_below="@+id/foodsimg"
                            android:layout_toRightOf="@+id/txtfood"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </TableRow>

            <TableRow
                android:layout_marginLeft="4dp">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/baby"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardUseCompatPadding="true"
                    android:onClick="kids">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:src="@drawable/baby"
                            android:id="@+id/babyimg"/>

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/babyimg"
                            android:id="@+id/babytxt"
                            android:text="Kids/Baby"
                            android:textAlignment="center"
                            android:fontFamily=""/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/tick"
                            android:visibility="invisible"
                            android:id="@+id/kidimg"
                            android:layout_below="@+id/babyimg"
                            android:layout_toRightOf="@+id/babytxt"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/others"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardUseCompatPadding="true"
                    android:onClick="otherss">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:src="@drawable/others"
                            android:id="@+id/othersimg"/>

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/othersimg"
                            android:id="@+id/otherstxt"
                            android:text="Others"
                            android:textAlignment="center"
                            android:fontFamily=""/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/tick"
                            android:layout_below="@+id/othersimg"
                            android:visibility="invisible"
                            android:id="@+id/othrimg"
                            android:layout_toRightOf="@+id/otherstxt"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </TableRow>

        </TableLayout>
    </ScrollView>
</LinearLayout>